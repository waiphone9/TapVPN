<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TapVPN" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Splash theme -->
    <style name="Theme.TapVPN.Splash" parent="Theme.SplashScreen">
        <!-- Background shown behind the icon -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>

        <!-- Big center icon shown on launch (use your launcher icon or a dedicated drawable) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo_layer</item>

        <!-- Optional speed of the icon animation (ms) -->
        <item name="windowSplashScreenAnimationDuration">300</item>

        <!-- The theme to switch to *after* the splash -->
        <item name="postSplashScreenTheme">@style/Theme.TapVPN</item>
    </style>
</resources>